@model StoreApp.Models.Order

@{
    ViewData["Title"] = "Оформлення покупки";
}


<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-0">@ViewData["Title"]</h2>
                        <p class="text-center mt-0">(@ViewBag.ItemTitle)</p>
                        @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
                        {
                            @Html.Hidden("ItemId", @ViewData["ItemId"])

                            <div class="form-outline mb-2">
                                @Html.TextBoxFor(m => m.FullName, new { placeholder = "Ім`я та Прізвище", @class = "form-control form-control-lg" })
                            </div>

                            <div class="form-outline mb-2">
                                @Html.TextBoxFor(m => m.Phone, new { placeholder = "Мобільний", @class = "form-control form-control-lg" })
                            </div>

                            <div class="form-outline mb-2">
                                @Html.TextBoxFor(m => m.Address, new { placeholder = "Адреса доставки", @class = "form-control form-control-lg" })
                            </div>

                            <div class="d-flex justify-content-center">
                                <input type="submit" class="btn btn-success btn-block btn-lg text-body" value="Підтвердити" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>