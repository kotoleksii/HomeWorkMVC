@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
        <div class="card mb-3 w-50">
            <div class="card-header bg-transparent text-center">GoodID: @Model.Id</div>
            <div class="card-body">
                <h5 class="card-title text-center">@Model.Title</h5>
                <p class="card-text text-center">@Model.Description</p>
            </div>
            <div class="card-footer bg-transparent text-center">@Model.Price$</div>
            <a href="~/Home/Goods" class="btn btn-primary">Back</a>
        </div>
    </div>